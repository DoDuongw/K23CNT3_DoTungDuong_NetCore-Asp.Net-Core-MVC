                <label asp-for="DtdId" class="control-label"></label>
                <input asp-for="DtdId" class="form-control" />
                <span asp-validation-for="DtdId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtdName" class="control-label"></label>
                <input asp-for="DtdName" class="form-control" />
                <span asp-validation-for="DtdName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtdBirthday" class="control-label"></label>
