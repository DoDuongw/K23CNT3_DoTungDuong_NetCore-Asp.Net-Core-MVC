@model DtdLesson07.Models.DtdEmployee

@{
    ViewData["Title"] = "Thêm mới sinh viên ";
}

<h1>Thêm mới </h1>

<h4>DtdEmployee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DtdCreate">
