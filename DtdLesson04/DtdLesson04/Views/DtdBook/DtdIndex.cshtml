@model IEnumerable<DtdLesson04.Models.DtdBook>
@{
    ViewData["Title"] = "Danh sách Book";
    Layout = "_DtdLayout";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Thông tin sách</h2>

    <a href="/dtdbook/dtdcreate" class="btn btn-primary mb-3">Thêm mới</a>


    <table class="table table-bordered table-striped table-hover shadow">
        <thead class="table-dark text-center">
            <tr>
                <th>BookID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Price</th>
                <th>Page</th>
                <th>Chuc nang</th> 
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var dtdItem in Model)
            {
                <tr>
                    <td>@dtdItem.DtdId</td>
                    <td>@dtdItem.DtdTitle</td>
                    <td>@dtdItem.DtdDescription</td>
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(dtdItem.DtdImage))
                        {
                            <img src="@dtdItem.DtdImage" alt="Book image" style="width: 100px; height: auto;" class="img-thumbnail" />
                        }
                        else
                        {
                            <span class="text-muted">No image</span>
                        }
                    </td>
                    <td>@dtdItem.DtdPrice</td>
                    <td>@dtdItem.DtdPage</td>

           
                    <td class="text-center">
             
                        <a href="/dtdbook/dtdedit/@dtdItem.DtdId" class="btn btn-warning btn-sm mx-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
       
                        <a href="/dtdbook/dtddelete/@dtdItem.DtdId" class="btn btn-danger btn-sm mx-1"
                           onclick="return confirm('Are you sure you want to delete this book?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
