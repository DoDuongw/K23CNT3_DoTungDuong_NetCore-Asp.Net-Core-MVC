<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DtdLab06</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DtdLab06.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @Html.Partial("_DtdNavbar")
    </header>
    <div class="container">
        <main role="main" class="pb-3 mt-4" style="max-width: 900px; margin: auto;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3 text-center">
        <div class="container">
            &copy; 2025 - DtdLab06 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
